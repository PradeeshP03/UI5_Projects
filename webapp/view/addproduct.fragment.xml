<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Employee">
    <f:SimpleForm>
        <f:content>
            <Label text="Employee Name"/>
            <Input value="{productObj>/EmployeeName}"/>
            <Label text="Designation"/>
            <Input value="{productObj>/Designation}"/>
            <Label text="Department"/>
            <Input value="{productObj>/Department}"/>
            <Label text="Location"/>
            <Input value="{productObj>/Location}"/>
            <Label text="Status"/>
            <Input value="{productObj>/Status}"/>
            <Label text="Check-In"/>
            <Input value="{productObj>/Checkin}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveProduct"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancel"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>